# Evon Smart Home Development Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# =============================================================================
# Home Assistant Configuration (for deployment and MCP server)
# =============================================================================

# Home Assistant host IP address
HA_HOST=192.168.1.x

# SSH user (usually 'root' for HA OS SSH add-on)
HA_USER=root

# SSH key path (optional, defaults to ~/.ssh/id_ed25519)
# HA_SSH_KEY=~/.ssh/id_ed25519

# Home Assistant MCP server URL (for Claude Code MCP integration)
HA_MCP_URL=http://192.168.1.x:8123/api/mcp

# Home Assistant long-lived access token (generate in HA Profile > Security)
HA_TOKEN=your-long-lived-access-token

# =============================================================================
# Evon API Credentials (for MCP server and testing)
# =============================================================================

# Local Evon system URL
EVON_HOST=http://192.168.1.x

# Evon username
EVON_USERNAME=User

# Evon password (plain text - will be encoded automatically)
EVON_PASSWORD=your-password

# Engine ID for remote access (found in Evon system settings)
EVON_ENGINE_ID=123456
